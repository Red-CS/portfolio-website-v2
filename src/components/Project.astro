---
import { FiGithub, FiExternalLink } from 'react-icons/fi'
import type { TProject } from '../../schemas/project'
import Icon from './Icon.astro'

interface Props {
  project: TProject
}
const { project } = Astro.props
---

<li>
  <p>Featured</p>
  <h3>{project.title}</h3>
  <p>{project.description}</p>
  <ul>
    {
      project.technologies.map((tech) => {
        return <li>{tech}</li>
      })
    }
  </ul>
  {
    project.links.github !== '' && (
      <Icon href={project.links.github} translate='false'>
        <FiGithub className='icon' style={{ scale: '1.2' }} />
      </Icon>
    )
  }

  {
    project.links.project_url !== '' && (
      <Icon href={project.links.project_url} translate='false'>
        <FiExternalLink className='icon' style={{ scale: '1.3' }} />
      </Icon>
    )
  }
</li>
