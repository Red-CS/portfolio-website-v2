---
import type { HTMLAttributes } from 'astro/types'
/* 
  TODO - Review on hover/focus button styles at https://uiverse.io/buttons
  I like: 
    https://uiverse.io/gharsh11032000/foolish-sloth-90
    https://uiverse.io/mrtqzbek11/moody-bulldog-15
*/

interface Props extends HTMLAttributes<'button'> {
  href: string
  text: string
}

const { href, text, ...attrs } = Astro.props
---

<button {...attrs}>
  <a href={href} target='_blank' referrerpolicy='no-referrer'>{text}</a>
</button>
<style>
  button {
    cursor: pointer;
    border: double 2px transparent;
    background-image: linear-gradient(var(--bg-color), var(--bg-color)), var(--gradient);
    border-image-slice: 1;
    border-radius: 4px;
    background-color: var(--bg-color);
    padding: 0.7em 3.5em;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    font-weight: 500;
    font-size: 1rem;
    text-transform: uppercase;
    display: block;
    /* transition: all 0.3s ease-in-out;

    &:hover {
      transform: translateY(-4px) translateX(-2px);
      box-shadow: inset 12px 12px 0 0 white;
      background: var(--gradient);
    } */
  }

  a {
    color: var(--text-main);
  }
</style>
